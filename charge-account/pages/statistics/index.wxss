/**index.wxss**/

.wrap {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

ec-canvas {
  width: 100%;
  height: 45%;
}

.table {
  font-size: 30rpx;
  border: none;
}

.td,
.th {
  border: none;
}

.month-list {
  height:100%;
  width: 100%;
  display: flex;
  display: -webkit-box; 
  flex-direction: column;
  padding:5rpx;
}

.month-item {
  width: 225rpx;
  height:225rpx;
  line-height:225rpx;
  text-align: center;
  border: 1rpx solid #333;
  border-radius: 10rpx;
  margin-right: 5rpx;
  background-color: #f6f6f6;
}
.show-detail{
  position: absolute;
  top: 2%;
  right: 3%;
  font-size: 30rpx;
  color:#4183c4;
  z-index: 100000000;
}