/**index.wxss**/

.wrap {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

ec-canvas {
  width: 100%;
  height: 40vh;
}

.not-found {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.table-wrap {
  height: 40vh;
}

.table {
  font-size: 30rpx;
  border: none;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.td,
.th {
  border: none;
}

