.month-list {
  display: flex;
  display: -webkit-box;
  flex-direction: column;
  padding-left: 5rpx;
}

.month-item {
  width: 20vh;
  height: 20vh;
  line-height: 20vh;
  text-align: center;
  /* border: 1rpx solid #333; */
  border-radius: 10rpx;
  margin-right: 5rpx;
  background-color: #f6f6f6;
}

.month-item-active {
  width: 20vh;
  height: 20vh;
  line-height: 20vh;
  text-align: center;
  /* border: 1rpx solid #333; */
  border-radius: 10rpx;
  margin-right: 5rpx;
  background-color: #7f7f7f;
}

.show-detail {
  position: absolute;
  top: 2%;
  right: 3%;
  font-size: 30rpx;
  color: #4183c4;
  z-index: 100000000;
}