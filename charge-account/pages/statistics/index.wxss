/**index.wxss**/

.wrap {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

ec-canvas {
  width: 100%;
  height: 50%;
}

.not-found {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.table-wrap {
  height: 30%;
}

.table {
  font-size: 30rpx;
  border: none;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.td,
.th {
  border: none;
}

.tr {
  border-bottom: 1px solid #f6f6f6;
}

.month-list-wrap {
  height: 20%;
  width: 100%;
  background-color: #f6f6f6;
}

.month-list {
  display: flex;
  display: -webkit-box;
  flex-direction: column;
  padding-top: 20rpx;
}

.month-item {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border: 1rpx solid #333;
  border-radius: 10rpx;
  margin-right: 5rpx;
  background-color: #37b9ff;
}

.month-item-active {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border: 1rpx solid #333;
  border-radius: 10rpx;
  margin-right: 5rpx;
  background-color: #39a0f5;
}

.show-detail {
  position: absolute;
  top: 2%;
  right: 3%;
  font-size: 30rpx;
  color: #4183c4;
  z-index: 100000000;
}