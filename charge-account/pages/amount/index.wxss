/**index.wxss**/
.amount-block{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.amount-block text{
  text-align: center;
  font-size: 50rpx;
}
.amount-input{
  margin-top: 70rpx;
  text-align: center;
  border-bottom: 1px solid #56abe4;
}
.btn-block{
  position: absolute;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn-block button{
  width: 400rpx;
  background-color: #56abe4;
}
.check-records{
  margin-top: 50rpx;
  font-size: 30rpx;
}
.auth-block{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10%;
}
.auth-block .title{
  font-size: 40rpx;
  font-weight: 200;
}
.auth-block .sub-title{
  font-size: 40rpx;
  font-weight: 200;
}
.auth-block .auth-list{
  font-size: 30rpx;
}
.auth-block .auth-btn{
  position: absolute;
  bottom: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 80%;
}
.auth-btn button{
  width: 400rpx;
  background-color: #56abe4;
}