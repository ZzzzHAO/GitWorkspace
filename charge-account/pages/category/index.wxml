<!--index.wxml-->
<view class="container1">
  <view class='category-block'>
    <text selectable='false'>
      消费分类：
    </text>
    <view class='radio-content'>
    <view class='radio-group'>
     <button wx:for="{{categories}}" size='default' type='primary' wx:key="{{item.id}}" plain="{{!item.checked}}" bindtap="checkCategory" data-id="{{item.id}}">
        {{item.name}}
      </button>
    </view>
    </view>
  </view>
  <view class='btn-block'>
    <button size='default' type='primary' bindtap="submit" wx:if='{{isVisible}}'>完成</button>
  </view>
</view>