/* pages/label/label.wxss */

.category-block {
  display: flex;
  flex-direction: column;
}

.category-block text {
  text-align: center;
  font-size: 50rpx;
}

.btn-block {
  position: absolute;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.btn-block button {
  width: 80%;
}
.radio-content{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 70rpx;
}
.radio-group{
  width: 80%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.radio-group button{
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 30rpx;
}
